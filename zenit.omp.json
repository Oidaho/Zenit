{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{if .Root}} (root) {{ end }} {{ title .UserName}} - {{ title .Shell }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#0654fc",
          "background": "#2d2c2d",
          "trailing_diamond": "\ue0b0",
          "template": "{{ if .WSL }}WSL at {{ end }} {{ .Icon }} "
        },
        {
          "type": "root",
          "style": "diamond",
          "foreground": "#d00000",
          "background": "#2d2c2d",
          "leading_diamond": "<transparent>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " \uf0e7 "
        },
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#ff00ff",
          "background": "#2d2c2d",
          "leading_diamond": "<transparent>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ if .SSHSession }}\ueba9 {{ end }} {{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#2e6ef8",
          "leading_diamond": "<transparent>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .Folder }} ",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": "\\",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "foreground": "transparent",
          "background": "#FB4F28",
          "leading_diamond": "<transparent>\ue0b0</>",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .HEAD }} "
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#ff00ff",
          "background": "#2d2c2d",
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "<transparent>\ue0b2</>",
          "template": " {{if eq .Code 0}}\ueba2 {{ .FormattedMs }}{{end}} ",
          "properties": {
            "always_enabled": true,
            "style": "austin",
            "threshold": 500
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "background": "#2d2c2d",
          "foreground_templates": [
            "{{ if .Error }}#ff0000{{ else }}#04f800{{ end }}"
          ],
          "leading_diamond": "\ue0b2",
          "trailing_diamond": "<transparent>\ue0b2</>",
          "template": "{{ if .Error }} Failed {{else}} Success {{ end }}",
          "properties": {
            "always_enabled": false
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "foreground": "#ff00ff",
          "background": "#2d2c2d",
          "leading_diamond": "\ue0b2",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    }
  ],
  "secondary_prompt": {
    "foreground": "#ff00ff",
    "template": " ... + "
  }
}
